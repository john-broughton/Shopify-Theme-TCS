<div class="page-width page-width--tiny page-content">
  <header class="section-header">
    <h1 class="section-header__title">{{ 'actions.activate' | t }}</h1>
    <br>
    <p>{{ 'info.create_your_password_to_activate' | t }}</p>
  </header>

  <div class="form-vertical">
    {%- form 'activate_customer_password' -%}

      {{ form.errors | default_errors }}

      <label for="CustomerPassword">{{ 'labels.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full">

      <label for="CustomerPasswordConfirmation">{{ 'actions.confirm_password' | t }}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full">

      <label for="active-account-submit" class="visually-hidden">{{ 'actions.activate' | t }}</label>
      <button type="submit" id="active-account-submit" class="btn">
        {{ 'actions.activate' | t }}
      </button>
    {%- endform -%}
  </div>
</div>
